{{!
 formPartial.mustache -- the form for posting

 template parameters:
 - error [message] - error message
 - post_url ( the url of the post form )
 - reference ( the post we are replying to, or empty string if it's an op )
 - button ( the text for the reply button )
 - files ( bool, do we allow attachments ? )
 - prefix  img src="\{\{prefix\}\}captcha/img"
 }}
{{#error}}
 <div class="warn">
  <h3>{{message}}</h3>
</div>
{{/error}}
 <form action="{{post_url}}" enctype="multipart/form-data" name="post" method="post">
 <input type="hidden" name="reference" value="{{reference}}" />
 <div id="postform-outer">
   <div id="postform-inner">
     <table class="postform">
       <tbody>
         <tr>
           <th>
             Name
           </th>
           <td>
             <input type="text" name="name" value="{{#name}}{{message}}{{/name}}" />
           </td>
         </tr>
         <tr>
           <th>
             Subject
           </th>
           <td>
             <input type="text" name="subject" value="{{#subject}}{{message}}{{/subject}}" />
             <input type="submit" value="{{button}}" class="button" />
           </td>
         </tr>
         <tr>
           <th>
             Comment
           </th>
           <td>
             <textarea id="postform_message" name="message" cols=40 rows=5>{{#message}}{{message}}{{/message}}</textarea>
           </td>
         </tr>
         {{#files}}
         <tr>
           <th>
             File
           </th>
           <td>
             <input id="postform_attachment" type="file" name="attachment" />
           </td>
         </tr>
         {{/files}}
         <tr>
           <th>
             Captcha
           </th>
           <td>
             <img id="captcha_img" src="captcha-{{prefix}}" alt="captcha" />
             <input type="hidden" name="session" value="{{prefix}}">
           </td>
         </tr>
         <tr>
           <th>
             Solution
           </th>
           <td>
             <input type="text" name="captcha" autocomplete="off" />
           </td>
         </tr>
       </tbody>
     </table>
   </div>
   <div style="padding-left: 2%;">Max file size is {{size}}M</b>
 </div>
 </form>
 
